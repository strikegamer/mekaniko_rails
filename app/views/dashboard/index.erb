<div class="row">
	<div class="column grid_6">
		<h2>Sharing center</h2>
	</div>
</div>
<div class="row">
	<div class="column grid_6">
		<form name="form" style="margin: 12px; padding: 30px; font-size: 10pt">
			<h4>What are you sharing?</h4><br/>
			 <%= radio_button_tag("radio_button", "task", false) %> task
			<!--input type="radio" name="radio_button" value="task" onclick="valor('task')" /-->
			<input type="radio" name="radio_button" value="link" onclick="valor('link')" /> link
			<input type="radio" name="radio_button" value="experience" onclick="valor('experience')" /> experience<br/>
			<textarea name="textarea"rows="5" cols="55" style="width: 100%"></textarea><br/><br/>
			<input type="text" name="link" value="www.rodeiodasgordas.cjb.net" style="display: none; font-size: 16px; width: 100%"/><br/>
			<p><a class="awesome large gray button"> Share! </a></p>
		</form>
	</div>
	<div class="column grid_5" style="margin-left: 40px; border: 1px solid gray;">
		<legend><h3>Ranking</h3></legend>
		
		<table width="100%">
			<col align="left" /><col align="left" /><col align="right" /><col align="right" />
			<% @players.each_with_index do |player, index| %>
				<% unless index >= 3 %>
					<tr class="<%= cycle("highlighted", "") %>">
						<td><h3><%= index + 1 %>.</h3></td>
						<td><%= link_to(image_tag(player.user.profile_image_url, :alt => player.user.name, :height => "45", :width => "45"), player_path(player)) %></td>
						<td><%= link_to(player.user.name, player_path(player)) %></td>
						<td><%= player.points %></td>
					</tr>
				<% end %>
			<% end %>
		</table>
		<a href="/leaderboard" style="float: right">Goto the Leaderboard</a>
	</div>
</div>
<div class="row">
	<div class="column grid_12">
		<h2>Activity</h2><br/>
	</div>
</div>
<div class="row" id="comments">
	<% @players.each_with_index do |player, index| %>
		<div class="column grid_11 activity <%= cycle("highlighted", "") %>" id="comment_<%= index + 1 %>" style="margin-left: 40px">
			<br/>
			<%= link_to(image_tag(player.user.profile_image_url, :alt => player.user.name, :height => "45", :width => "45"), player_path(player)) %>
			<span>
				<%= link_to(player.user.name, player_path(player)) %>
				<% @tasks.each_with_index do |task, index| %>
					<% if task.player_id == (index + 1) %>					
						<%= task.description %>
					<% end %>
				<% end %>
				<%= link_to("<b>Link Name</b>", player_path(player)) %>
			</span><br/>
			<div id="date_time">
				21 Dec 10:00 <a href="#">comment</a>
			</div>
		</div>
	<% end %>
</div>
<br/>
</div>
